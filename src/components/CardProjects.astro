---
const { img, title } = Astro.props;
---

<div class="card">
	<img src={img} alt="" />
	<h3>{title}</h3>
</div>

<style>
	.card {
		width: 369px;
		display: flex;
		flex-direction: column;
		align-items: center;
		margin-bottom: 40px;
	}

	.card img {
		height: 347px;
		border-radius: 20px;
	}

	.card h3 {
		color: #51516b;
		text-align: center;
		font-size: 20px;
		font-style: normal;
		font-weight: 700;
		line-height: normal;
		margin: 20px auto;
	}

	.card span {
		color: #51516b;
		text-align: center;
		font-size: 14px;
		font-style: normal;
		font-weight: 400;
		line-height: normal;
	}
</style>
